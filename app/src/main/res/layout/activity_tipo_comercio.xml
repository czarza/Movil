<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.czarzap.cobromovil.comercio.TipoComercioActivity"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:id="@+id/imageView"
        android:src="@mipmap/ic_sifi"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".375" />

    <Button
        android:id="@+id/bAdd"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:text="AGREGAR"
        android:drawableLeft="@drawable/ic_add"
        android:background="@drawable/orange_blue_selector"
        android:textColor="@color/basic_item_bg"
        android:layout_marginTop="40dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="200dp"
        android:layout_height="45dp" />

    <Button
        android:layout_height="45dp"
        android:id="@+id/bEstablecido"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:text="BUSCAR"
        android:drawableLeft="@drawable/ic_face_black"
        android:background="@drawable/orange_blue_selector"
        android:textColor="@color/basic_item_bg"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:elegantTextHeight="false"
        android:layout_width="200dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:id="@+id/bSemiFijo"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:text="RUTAS"
        android:drawableLeft="@drawable/ic_store_black"
        android:background="@drawable/orange_blue_selector"
        android:textColor="@color/basic_item_bg"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp" />

    <Button
        android:layout_height="45dp"
        android:id="@+id/bPagos"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:text="PAGOS"
        android:drawableLeft="@drawable/ic_pago"
        android:background="@drawable/orange_blue_selector"
        android:textColor="@color/basic_item_bg"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="20dp"
        android:layout_width="200dp" />

    <Button
        android:layout_height="45dp"
        android:id="@+id/bCorte"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:text="Corte"
        android:drawableLeft="@drawable/ic_corte"
        android:background="@drawable/orange_blue_selector"
        android:textColor="@color/basic_item_bg"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:paddingRight="5dp"
        android:paddingLeft="30dp"
        android:layout_width="200dp" />

    <Button
        android:layout_height="45dp"
        android:id="@+id/bCobrar"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:text="Cobro Unico"
        android:drawableLeft="@drawable/ic_cobrar"
        android:background="@drawable/orange_blue_selector"
        android:textColor="@color/basic_item_bg"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:paddingRight="5dp"
        android:paddingLeft="30dp"
        android:layout_width="200dp" />

</LinearLayout>
