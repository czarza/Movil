<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.czarzap.cobromovil.menu.MenuActivity"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:layout_width="130dp"
        android:id="@+id/imageView"
        android:src="@mipmap/ic_sifi"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.46"
        android:layout_height="50dp" />

    <Button
        android:layout_width="200dp"
        android:text="SINCRONIZAR"
        android:id="@+id/bOffline"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/ic_offline"
        android:layout_gravity="center_horizontal"
        android:textSize="18dp"
        android:background="@drawable/orange_blue_selector"
        android:textColor="@color/basic_item_bg"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:layout_height="40dp" />

    <Button
        android:layout_width="200dp"
        android:text="IMPRESORA"
        android:id="@+id/bConfigurar"
        android:drawableLeft="@drawable/ic_printer"
        android:layout_gravity="center_horizontal"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/orange_blue_selector"
        android:textColor="@color/basic_item_bg"
        android:paddingLeft="5dp"
        android:paddingRight="20dp"
        android:layout_height="40dp" />

    <Button
        android:layout_width="200dp"
        android:text="INGRESOS"
        android:id="@+id/bIngresos"
        android:drawableLeft="@drawable/ic_ingresos"
        android:layout_gravity="center_horizontal"
        android:textSize="18dp"
        android:background="@drawable/orange_blue_selector"
        android:textColor="@color/basic_item_bg"
        android:paddingLeft="7dp"
        android:paddingRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_height="40dp" />

    <Button
        android:layout_width="200dp"
        android:id="@+id/bLeerQr"
        android:drawableLeft="@drawable/ic_qr"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:text="ESCANEAR"
        android:background="@drawable/orange_blue_selector"
        android:textColor="@color/basic_item_bg"
        android:paddingLeft="7dp"
        android:paddingRight="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="40dp" />

    <Button
        android:layout_width="200dp"
        android:text="TEST"
        android:id="@+id/bTest"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_test"
        android:layout_gravity="center_horizontal"
        android:textSize="18dp"
        android:background="@drawable/orange_blue_selector"
        android:textColor="@color/basic_item_bg"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:layout_height="40dp" />

    <Button
        android:layout_width="200dp"
        android:text="CERRAR SESION"
        android:id="@+id/bLogOut"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_logout"
        android:layout_gravity="center_horizontal"
        android:textSize="18dp"
        android:background="@drawable/orange_blue_selector"
        android:textColor="@color/basic_item_bg"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:layout_height="48dp" />
</LinearLayout>
