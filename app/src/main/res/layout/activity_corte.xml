<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.czarzap.cobromovil.corte.CorteActivity"
    android:gravity="center">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CORTE AGENTE"
        android:id="@+id/textView3"
        android:layout_gravity="center"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="30dp"
        android:layout_marginBottom="20dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <Button
            android:id="@+id/btn_ini"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:text="Inicio"
            android:background="@drawable/orange_blue_selector"
            android:layout_weight="1"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_time_ini"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_weight="2" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btn_fin"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:text="FIN"
            android:background="@drawable/orange_blue_selector"
            android:layout_weight="1"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_time_fin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_weight="2" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="GENERAR"
        android:id="@+id/bGenerar"
        android:background="@drawable/orange_blue_selector"
        android:layout_marginTop="10dp"
        android:textSize="20dp" />


</LinearLayout>
