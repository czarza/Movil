<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fondo"
    tools:context="com.czarzap.cobromovil.comercio.VerImagenActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivImagen"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/imagen_conductor"
        android:layout_margin="15dp" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <com.dd.CircularProgressButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bPrincipal"
            android:textColor="@color/cpb_white"
            app:cpb_selectorIdle="@drawable/button"
            app:cpb_colorIndicator="@color/primary"
            app:cpb_colorProgress="@color/gray_bg"
            app:cpb_cornerRadius="12dp"
            app:cpb_iconComplete="@mipmap/ic_action_accept"
            app:cpb_iconError="@mipmap/ic_action_cancel"
            app:cpb_textIdle="PRINCIPAL"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:layout_margin="8dp"
            android:layout_weight="1" />

        <com.dd.CircularProgressButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bConductor"
            android:textColor="@color/cpb_white"
            app:cpb_selectorIdle="@drawable/button"
            app:cpb_colorIndicator="@color/primary"
            app:cpb_colorProgress="@color/gray_bg"
            app:cpb_cornerRadius="12dp"
            app:cpb_iconComplete="@mipmap/ic_action_accept"
            app:cpb_iconError="@mipmap/ic_action_cancel"
            app:cpb_textIdle="CONDUCTOR"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:layout_margin="8dp"
            android:layout_weight="1" />


    </LinearLayout>

    <com.dd.CircularProgressButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bRegresar"
        android:textColor="@color/cpb_white"
        app:cpb_selectorIdle="@drawable/button"
        app:cpb_colorIndicator="@color/primary"
        app:cpb_colorProgress="@color/gray_bg"
        app:cpb_cornerRadius="12dp"
        app:cpb_iconComplete="@mipmap/ic_action_accept"
        app:cpb_iconError="@mipmap/ic_action_cancel"
        app:cpb_textIdle="REGRESAR"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:layout_margin="8dp" />

</LinearLayout>
