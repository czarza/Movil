<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo"
        android:orientation="vertical"
        tools:context="com.czarzap.cobromovil.pagos.PagosSemiFijo"
        android:gravity="center_vertical|center_horizontal"
    android:weightSum="1">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/costo"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_weight="0"
        android:gravity="center|center_vertical|center_horizontal">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etCosto"
            android:hint="Costo"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:inputType="numberDecimal"
            android:textSize="30sp"
            android:textAlignment="gravity"
            android:gravity="center_vertical|center_horizontal" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/notas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="0.00"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etNotas"
            android:hint="Nota"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    </android.support.design.widget.TextInputLayout>


        <com.dd.CircularProgressButton
            android:id="@+id/circularButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cpb_white"
            android:textSize="18sp"
            app:cpb_selectorIdle="@drawable/button"
            app:cpb_colorIndicator="@color/primary"
            app:cpb_colorProgress="@color/gray_bg"
            app:cpb_cornerRadius="12dp"
            app:cpb_iconComplete="@mipmap/ic_action_accept"
            app:cpb_iconError="@mipmap/ic_action_cancel"
            app:cpb_textIdle="Pagar"
            android:layout_gravity="center" />

    <com.dd.CircularProgressButton
        android:id="@+id/bImprimir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/cpb_white"
        android:textSize="18sp"
        app:cpb_selectorIdle="@drawable/button"
        app:cpb_colorIndicator="@color/primary"
        app:cpb_colorProgress="@color/gray_bg"
        app:cpb_cornerRadius="12dp"
        app:cpb_iconComplete="@mipmap/ic_action_accept"
        app:cpb_iconError="@mipmap/ic_action_cancel"
        app:cpb_textIdle="Imprimir Recibo"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:visibility="invisible"/>

    <com.dd.CircularProgressButton
        android:id="@+id/bRegresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/cpb_white"
        android:textSize="18sp"
        app:cpb_selectorIdle="@drawable/button"
        app:cpb_colorIndicator="@color/primary"
        app:cpb_colorProgress="@color/gray_bg"
        app:cpb_cornerRadius="12dp"
        app:cpb_iconComplete="@mipmap/ic_action_accept"
        app:cpb_iconError="@mipmap/ic_action_cancel"
        app:cpb_textIdle="Regresar"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:visibility="invisible" />
    </LinearLayout>
